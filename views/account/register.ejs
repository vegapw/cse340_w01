<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
       <% }) %>
    </ul>
<% } %>

<div class="formcont">
    <form action="/account/register" method="post" class="form">
        <fieldset>
            <h3>All fields are required!</h3>
            <label>First Name: <input type="text" name="account_firstname" id="account_firstname" required value="<%= locals.account_firstname %>"></label>
            <label>Last Name: <input type="text" name="account_lastname" id="account_lastname" required value="<%= locals.account_lastname %>"></label>
            <label>Email: <input type="email" name="account_email" id="account_email" required placeholder="someone@mail.com" value="<%= locals.account_email %>"></label>
            <label>Password: <input type="password" name="account_password" id="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"></label>
            <p>Password must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</p>
            <span id="showpsw">Show Password</span>
            <input type="submit" value="Register">
        </fieldset>
    </form>
</div>
