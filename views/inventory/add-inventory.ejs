<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <li><%= error.msg %></li>
       <% }) %>
    </ul>
<% } %>

<div class="formcont">
    <form action="/inv/add-inventory" method="post" class="form">
        <fieldset>
            <h3>All fields are required!</h3>
            <label>Classification: <%- classificationList %></label>
            <label>Make: <input type="text" name="inv_make" id="inv_make" required value="<%= locals.inv_make %>" pattern="[A-Za-z0-9]{3,}" placeholder="Min of 3 characters"></label>
            <label>Model: <input type="text" name="inv_model" id="inv_model" required value="<%= locals.inv_model %>" pattern="[A-Za-z0-9]{3,}" placeholder="Min of 3 characters"></label>
            <label>Year: <input type="text" name="inv_year" id="inv_year" required value="<%= locals.inv_year %>" pattern="[0-9]{4}" placeholder="4-digit year"></label>
            <label>Description: <textarea name="inv_description" id="inv_description" required><%= locals.inv_description || '' %></textarea></label>
            <label>Image Path: <input type="text" name="inv_image" id="inv_image" required value="<%= locals.inv_image || '/images/vehicles/no-image.png'%> "></label>
            <label>Thumbnail Path: <input type="text" name="inv_thumbnail" id="inv_thumbnail" required value="<%= locals.inv_thumbnail || '/images/vehicles/no-image-tn.png'%>"></label>
            <label>Price: <input type="text" name="inv_price" id="inv_price" required value="<%= locals.inv_price %>" pattern="[0-9,]{1,}" placeholder="decimal or integer"></label>
            <label>Miles: <input type="text" name="inv_miles" id="inv_miles" required value="<%= locals.inv_miles %>" pattern="[0-9]{1,}" placeholder="digits only"></label>
            <label>Color: <input type="text" name="inv_color" id="inv_color" required value="<%= locals.inv_color %>" pattern="[A-Za-z]{3,}"></label>
            <input type="submit" value="Add Vehicle">
        </fieldset>
    </form>
</div>
